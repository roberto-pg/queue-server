{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["dist"],
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "camelcase": "off",
    "no-useless-constructor": "off",
    "no-use-before-define": "off"
  }
}
